# RIAHN Language Learning Platform
# Environment: development | production

# === DATABASE ===
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/riahn
# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/riahn?retryWrites=true&w=majority

# === AUTHENTICATION ===
# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
# Session secret for NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# === TRANSLATION APIs ===
# Google Translate API (recommended)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
# Microsoft Translator API (alternative)
MICROSOFT_TRANSLATE_API_KEY=your-microsoft-translator-key

# === REAL-TIME FEATURES ===
# Socket.IO server URL
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# === STORAGE ===
# AWS S3 configuration (optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=riahn-storage

# === SECURITY ===
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# === PERFORMANCE ===
# Bundle analysis
ANALYZE=false

# === APP CONFIGURATION ===
# Base URL of the application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=RIAHN
NEXT_PUBLIC_APP_DESCRIPTION=פלטפורמה ללמידת שפות וחיבור בין תרבויות

# === DEVELOPMENT ===
NODE_ENV=development
DEBUG=true
