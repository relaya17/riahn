{
    "name": "languageconnect",
    "version": "1.0.0",
    "description": "LanguageConnect - אפליקציה ללימוד שפות וחיבור בין משתמשים",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "server": "node server.js",
        "build": "next build",
        "analyze": "next build --analyze",
        "export": "next export",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:eslint": "eslint . --ext .ts,.tsx",
        "type-check": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
        "build:prod": "chmod +x scripts/build.sh && ./scripts/build.sh",
        "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
        "render:build": "pnpm install && pnpm build",
        "render:start": "pnpm start",
        "render:deploy": "pnpm install && pnpm build && pnpm start",
        "mobile:install": "pnpm install",
        "mobile:android": "pnpm --filter mobile run android",
        "mobile:ios": "pnpm --filter mobile run ios",
        "security:audit": "pnpm audit",
        "security:fix": "pnpm audit fix",
        "performance:analyze": "pnpm build --analyze",
        "clean": "rm -rf node_modules .next out dist"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.9.0",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.19.17",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "autoprefixer": "^10.4.21",
        "axios": "^1.12.2",
        "bcryptjs": "^3.0.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^2.30.0",
        "firebase": "^10.14.1",
        "framer-motion": "^10.18.0",
        "jsonwebtoken": "^9.0.2",
        "lucide-react": "^0.294.0",
        "mongoose": "^8.18.1",
        "next": "^14.2.32",
        "next-auth": "^4.24.11",
        "next-themes": "^0.2.1",
        "postcss": "^8.5.6",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.63.0",
        "react-hot-toast": "^2.6.0",
        "react-intersection-observer": "^9.16.0",
        "react-markdown": "^9.1.0",
        "react-query": "^3.39.3",
        "react-redux": "^9.2.0",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.2",
        "zod": "^4.1.11",
        "zustand": "^4.5.7"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/react-redux": "^7.1.34",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-config-next": "^14.2.32",
        "eslint-plugin-react": "^7.37.5",
        "express": "^5.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "ts-node": "^10.9.2"
    }
}